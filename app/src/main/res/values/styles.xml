<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/yellow</item>
        <item name="android:datePickerDialogTheme">@style/MyDatePickerDialog</item>
        <item name="android:statusBarColor">#000000</item>
    </style>

    <style name="MyDatePickerDialog" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:colorAccent">@color/bg</item>
    </style>

    <!--<style name="MyDatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">-->
        <!--<item name="android:headerBackground">@color/bg</item>-->
        <!--<item name="android:colorSecondary">@color/white</item>-->
        <!--<item name="android:yearListSelectorColor">@color/yellow</item>-->

    <!--</style>-->


    

    <style name="TabTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/bg</item>                                <!-- 배경 -->
        <item name="android:textColorPrimary">@color/yellow</item>       <!-- 탭바 선택된 텍스트 -->
        <item name="android:textColorSecondary">#7E7E7E</item>     <!-- 탭바 텍스트 -->
        <item name="colorAccent">@color/yellow</item>                    <!-- 하단 움직이는 바 색-->
    </style>

    <style name="ShopTabTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/white</item>                                <!-- 배경 -->
        <item name="android:textColorPrimary">@color/yellow</item>       <!-- 탭바 선택된 텍스트 -->
        <item name="android:textColorSecondary">@color/black</item>     <!-- 탭바 텍스트 -->
        <item name="colorAccent">@color/yellow</item>                    <!-- 하단 움직이는 바 색-->
    </style>

</resources>
